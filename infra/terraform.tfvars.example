# AWS Configuration
aws_region  = "us-west-2"
environment = "production"

# EC2 Configuration
instance_type = "t3.small"

# SSH public key (paste your public key here)
# Generate with: ssh-keygen -t ed25519 -C "your-email@example.com"
ssh_public_key = "ssh-ed25519 AAAA... your-email@example.com"

# Restrict SSH access to your IP (recommended)
# Find your IP: curl ifconfig.me
ssh_allowed_cidr = "YOUR_IP/32"

# Domain for Caddy SSL (must point to EC2 Elastic IP)
domain_name = "twilio-bridge.yourdomain.com"

# Email Configuration
notification_email = "you@example.com"
sender_email       = "noreply@yourdomain.com"

# S3 Lifecycle (optional)
transcript_retention_days     = 90
transcript_ia_transition_days = 30
