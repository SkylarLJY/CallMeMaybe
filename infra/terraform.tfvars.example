# AWS Configuration
aws_region  = "us-west-2"
environment = "production"

# EC2 Configuration
instance_type = "t3.small"

# SSH public key (paste your public key here)
# Generate with: ssh-keygen -t ed25519 -C "your-email@example.com"
ssh_public_key = "ssh-ed25519 AAAA... your-email@example.com"

# Domain for Caddy SSL (must point to EC2 Elastic IP)
domain_name = "twilio-bridge.yourdomain.com"

# Twilio Auth Token (from Twilio Console > Account > API keys & tokens)
twilio_auth_token = "your_twilio_auth_token"

# Tailscale Auth Key (optional - from Tailscale Admin > Settings > Keys > Generate auth key)
# If provided, Tailscale will auto-authenticate on instance creation
tailscale_auth_key = ""

# Email Configuration
notification_email = "you@example.com"
sender_email       = "noreply@yourdomain.com"

# S3 Lifecycle (optional)
transcript_retention_days     = 90
transcript_ia_transition_days = 30

# GitHub Configuration
github_repo        = "username/CallMeMaybe"
create_github_oidc = true  # Set to false if OIDC provider already exists in your AWS account
